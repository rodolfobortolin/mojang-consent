## -- migration-consent-admin.vm --
<html>
<head>
    <title>Migration Consent Administration</title>
    <meta name="decorator" content="atl.admin">
    $webResourceManager.requireResource("com.example.jira.plugins.migration-consent:migration-consent-resources")
</head>
<body>
    <div class="aui-page-panel">
        <div class="aui-page-panel-inner">
            <section class="aui-page-panel-content">
                <h2>Migration Consent Email Administration</h2>
                
                #if ($errorMessage)
                <div class="aui-message aui-message-error">
                    <p>$errorMessage</p>
                </div>
                #end
                
                #if ($actionMessages)
                <div class="aui-message aui-message-success">
                    #foreach ($message in $actionMessages)
                        <p>$message</p>
                    #end
                </div>
                #end
                
                <form class="aui" action="MigrationConsentAdmin.jspa" method="post" id="migration-consent-form">
                    <input type="hidden" name="atl_token" value="$atl_token">
                    
                    <div class="field-group">
                        <label for="selectedGroup">Target Group (Optional)</label>
                        <select class="select" id="selectedGroup" name="selectedGroup">
                            <option value="">All Users</option>
                            #foreach($group in $groupManager.allGroups)
                                <option value="$group.name"#if($selectedGroup == $group.name) selected#end>
                                    $group.name
                                </option>
                            #end
                        </select>
                        <div class="description">Select a group to send emails to specific users, or leave empty to send to all users</div>
                    </div>
                    
                    <div class="field-group">
                        <input type="submit" name="sendEmails" value="Send Consent Emails" class="aui-button aui-button-primary">
                    </div>
                </form>
                
                #if ($emailsSent)
                <div class="aui-message aui-message-info">
                    <p>Email sending process has been initiated. Please check the logs for details.</p>
                </div>
                #end
            </section>
        </div>
    </div>
</body>
</html>